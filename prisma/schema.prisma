generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String     @id @unique @default(uuid())
  name      String
  createdAt DateTime   @default(now())
  feedbacks Feedback[]

  @@map("users")
}

model Feedback {
  id           String   @id @unique @default(uuid())
  createdAt    DateTime
  feedbackType String
  description  String
  user         User     @relation(fields: [fk_id_user], references: [id])
  fk_id_user   String

  @@map("feedbacks")
}
